<%= render "shared/header" %>

<div class="container mx-auto p-2">
  <h1 class="font-bold text-gray-800 text-2xl">Hi, <%= current_user.email %></h1>

  <p class="text-xl text-gray-700">Owned Tasks</p>
  <% current_user.owned_tasks.each do |task| %>
    <p><%= task.title %></p>
  <% end %>

  <p class="text-xl text-gray-700">Managed Tasks</p>
  <% current_user.managed_tasks.each do |task| %>
    <p><%= task.title %></p>
  <% end %>
</div>
